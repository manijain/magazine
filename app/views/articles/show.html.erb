<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @article.body %>
</p>

<p>
  <strong>Author:</strong>
  <%= @article.author %>
</p>

<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %>
<hr>

<h2>Listing Comments </h2>
  <% @article.comments.each do |comment| %>
    <% if comment.parent_id.blank? %>
    	<strong> Comment : </strong>
      <p><%= comment.description %>
      <% unless comment.parents.present? %>
        | <%= link_to "Delete Comment", ([comment.article, comment]), method: :delete, data: {confirm: "Are you sure?" } %>
        <% end %></p>
        <b>Created by - <%= comment.user.email %></b>
    <% end %><br><br>
    
    <% comment.parents.each do |p| %>
    ***********] <%= p.description %> <br><b>Replied by - <%= p.user.email %></b><br>
    <% end %>

    <% if comment.parent_id.blank? %>
      <div class="comment" style="margin-left:60px;">
        <%= form_for([@article, comment.parents.build]) do |f| %>
          <%= hidden_field_tag :parent_id, comment.id %>
          <%= f.text_area :description, :placeholder => "Enter Your Reply" %><br>
          <%= f.submit "Reply" %>
        <% end %>
      </div>
    <% end %><br>
  <% end %>
<hr>
<%= form_for([@article, @article.comments.build]) do |f| %>
	<%= f.text_area :description, :placeholder => "Enter Your comment" %><br>
	<%= f.submit "submit" %>
<% end %>